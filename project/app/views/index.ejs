<% include template/header %>
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="text-center">
            <img src="/images/register-logo.png" alt="Ishoutnow">
        </div>
        <div class="card-header text-center">Login</div>
        <div class="card-body">
        <% if(errors){ %>
            <ul>
            <% for(var i = 0; i < errors.length; i++){ %>
                <li> <%= errors[i].msg %> </li>
            <% } %>
            </ul>
        <% } %>
        <form autocomplete="off" name="loginForm" action="<%= baseURL %>" method="post">
          <div class="form-group">
            <div class="form-label-group">
              <input type="email" id="email_id" name="email_id" value="<%= loginData.email_id %>" class="form-control" placeholder="Email address" autofocus="autofocus">
              <label for="email_id">Email address</label>
            </div>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <input type="password" id="password" name="password" value="<%= loginData.password %>" class="form-control" placeholder="Password" >
              <label for="password">Password</label>
            </div>
          </div>
          <div class="error-msg text-center"><%= returnMsg %></div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
      </div>
    </div>
  </div>
  <% include template/footer %>