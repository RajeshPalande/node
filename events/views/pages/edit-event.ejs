<% include ../partials/header %>

<div class="row">
    <form action="http://localhost:4000/event/edit/<%= item[0].category_id %>" method="post" class="col s12">
        <input type="hidden" name="category_id" value="<%= item[0].category_id %>">
        <div class="form-group row">
            <label for="category_name" class="col-2 col-form-label">Category Name</label>
            <div class="col-10">
                <input type="text" name="category_name" value="<%= item[0].category_name %>" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="category_name" class="col-2 col-form-label">Click here to Submit</label>
            <input type="submit" name="submit" value="Save" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>


<% include ../partials/footer %>