<% include ../partials/header %>

<div class="row">
        <% if(errors){ %>
            <ul>
            <% for(var i = 0; i < errors.length; i++){ %>
                <li> <%= errors[i].msg %> </li>
            <% } %>
            </ul>
         <% } %>
    <form action='<%= baseURL %>event/add' method="post" class="col s12">
        <input type="hidden" name="category_id" value="">
        <div class="form-group row">
            <label for="category_name" class="col-2 col-form-label">Category Name </label>
            <div class="col-10">
                <input type="text" name="category_name" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label for="category_name" class="col-2 col-form-label">Click here to Submit</label>
            <input type="submit" name="submit" value="Save" class="btn btn-primary btn-lg" />
        </div>
    </form>
</div>


<% include ../partials/footer %>